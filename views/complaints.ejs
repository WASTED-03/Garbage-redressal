<body class="bg-gray-50 dark:bg-gray-900 font-sans leading-normal tracking-normal">
  <div class="container mx-auto px-6 py-12 w-full">
    <div class="mb-8">
      <h1 class="text-4xl font-extrabold text-gray-800 dark:text-white">Admin Dashboard</h1>
    </div>

    <!-- Make Table Scrollable on Small Screens -->
    <div class="overflow-x-auto bg-white dark:bg-gray-800 shadow rounded-lg">
      <table class="w-full min-w-max text-sm text-gray-500 dark:text-gray-400">
        <thead class="bg-gray-100 dark:bg-gray-700 text-xs uppercase text-gray-600 dark:text-gray-300">
          <tr>
            <th class="px-6 py-4 text-left">First Name</th>
            <th class="px-6 py-4 text-left">Last Name</th>
            <th class="px-6 py-4 text-left">Phone</th>
            <th class="px-6 py-4 text-left">Address</th>
            <th class="px-6 py-4 text-left">Complaint</th>
            <th class="px-6 py-4 text-left">Action</th>
          </tr>
        </thead>
        <tbody>
          <% data.forEach(complaint => { %>
            <tr class="border-b hover:bg-gray-50 dark:hover:bg-gray-600">
              <td class="px-6 py-4 text-gray-700 dark:text-gray-200 whitespace-nowrap"><%= complaint.first_name %></td>
              <td class="px-6 py-4 text-gray-700 dark:text-gray-200 whitespace-nowrap"><%= complaint.last_name %></td>
              <td class="px-6 py-4 text-gray-700 dark:text-gray-200 whitespace-nowrap"><%= complaint.phone %></td>
              <td class="px-6 py-4 text-gray-700 dark:text-gray-200 whitespace-nowrap"><%= complaint.address %></td>
              <td class="px-6 py-4 text-gray-700 dark:text-gray-200 whitespace-nowrap"><%= complaint.complain %></td>
              <td class="px-6 py-4" id="status-<%= complaint._id %>">
                <% if (complaint.status === 'pending') { %>
                  <button id="mark-completed-<%= complaint._id %>" class="px-4 py-2 bg-green-600 text-white rounded-md hover:bg-green-700">
                    Mark as Completed
                  </button>
                <% } else { %>
                  <span class="text-green-600 font-bold">Completed</span>
                <% } %>
              </td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
  </div>

  <!-- Success Popup -->
  <div id="success-popup" class="fixed inset-0 flex items-center justify-center bg-black bg-opacity-50 hidden">
    <div class="bg-white text-green-600 p-6 rounded-lg shadow-lg">
      <p id="popup-message" class="font-bold"></p>
    </div>
  </div>

  <!-- Footer -->
  <footer class="bg-gray-800 dark:bg-gray-900 text-white text-center py-4 mt-12">
    <p>&copy; 2025 Admin Dashboard. All rights reserved.</p>
  </footer>
</body>
</html>
